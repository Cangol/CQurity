<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="40dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Pick V"
                android:textColor="#979797"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:background="@color/actionbar_item"
                android:id="@+id/btn_staff" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#979797"
                android:layout_alignBottom="@id/btn_staff"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/btn_staff"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_ecommerce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ecommerce V"
                android:textColor="#979797"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:background="@color/actionbar_item"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#979797"
                android:layout_alignBottom="@id/btn_ecommerce"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/btn_ecommerce"
                />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/include_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/fragment_list"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        />
</LinearLayout>
